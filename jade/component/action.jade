include icon

mixin action(action)
	li.action(data-action-name = action.name, class = action.menu ? 'has-menu' : '', tabindex = 0)&attributes(attributes)
		if action.hotkey
			code.hotkey= action.hotkey
		if action.icon
			+icon(action.icon)
		if action.caption
			a.caption= action.caption
		if action.menu
			span.action-menu-icon
				+icon('action-menu')
			.submenu
				+menu(menus.getByName(action.menu))
